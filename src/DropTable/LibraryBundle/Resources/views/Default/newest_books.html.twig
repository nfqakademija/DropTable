<div class="row">
    {% for book in books %}
    <div class="col-md-3">
        <a href="{{ path('catalog.book', { 'slug': book.slug }) }}">
            <div class="book">
                    <img src="{{ book.thumbnailSmall|default(asset('bundles/droptablelibrary/img/uploads/placeholder-d.png')) }}" alt=""/>
                <h4>
                    {{ book.title }}
                </h4>

                <h6>
                    {% for author in book.authors %}
