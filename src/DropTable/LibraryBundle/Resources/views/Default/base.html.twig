<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <title>{% block title %}DropTable{% endblock %}</title>

        {# Bootstrap css #}
        {#<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">#}

        {# For PHPStorm hinting #}
        {% stylesheets '@DropTableUserBundle/Resources/public/css/bootstrap.min.css'
        '@DropTableUserBundle/Resources/public/css/custom.css'
        '@PinanoSelect2Bundle/Resources/public/css/select2.min.css' %}
                <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block body %}{% endblock body %}
        <!-- Latest compiled and minified JavaScript -->
        {#<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>#}
        <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
        {% javascripts
            '@DropTableUserBundle/Resources/public/js/bootstrap.min.js'
            '@PinanoSelect2Bundle/Resources/public/js/select2.js'
            'bundles/fosjsrouting/js/router.js'
            '@DropTableUserBundle/Resources/public/js/custom.js'
            '@DropTableLibraryBundle/Resources/public/js/profileActions.js'
            '@DropTableUserBundle/Resources/public/js/categories-select.js'
        %}
            <script src="{{ asset_url }}"></script>
        {# TODO: Include in assetic. #}
            <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        {% endjavascripts %}
    </body>
</html>
